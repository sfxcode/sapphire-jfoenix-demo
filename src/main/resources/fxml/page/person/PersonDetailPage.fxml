<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sfxcode.sapphire.jfoenix.demo.controller.page.person.PersonDetailPageController">

    <children>
        <TitledPane fx:id="detailPane" collapsible="false" minHeight="300.0" minWidth="900.0" text="Detail" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <GridPane fx:id="formPane">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="20.0" minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="10.0" minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <GridPane prefHeight="100.0" prefWidth="396.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="70.0" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="50.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="10.0" minWidth="10.0" prefWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="15.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="15.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Name"/>
                                <JFXTextField id="name" prefHeight="26.0" prefWidth="100.0" GridPane.columnIndex="1">
                                    <padding>
                                        <Insets right="5.0"/>
                                    </padding>
                                </JFXTextField>
                                <Label text="Name"/>
                                <JFXTextField id="email" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Mail" GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                        <HBox styleClass="detailActionBox" spacing="20.0" GridPane.rowIndex="3">
                            <JFXButton mnemonicParsing="false" onAction="#actionSaveAndReturn" text="Save"/>
                            <JFXButton mnemonicParsing="false" onAction="#actionRevertAndReturn" text="Cancel"/>
                            <JFXButton mnemonicParsing="false" onAction="#actionRevert" text="Reset"/>
                        </HBox>
                    </children>
                </GridPane>
            </content>
        </TitledPane>
    </children>
</AnchorPane>
